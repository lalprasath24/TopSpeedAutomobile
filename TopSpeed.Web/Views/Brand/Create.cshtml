@model  Brand

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center text-uppercase">Create List</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 border-1 border">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.EstablishedYear" class="form-label"></label>
                    <input asp-for="@Model.EstablishedYear" class="form-control" />
                    <span asp-validation-for="@Model.EstablishedYear" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="@Model.BrandLogo" class="form-label"></label>
                    <input type="file" name="files" id="uploadBox" class="form-control" />
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-success">Submit</button>
                    <a asp-controller="Brand"  asp-action="Index"  class="btn btn-danger">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

 @section scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
 }